{
  "manifest_version": 2,
  "name": "Finite Horse",
  "description": "An extension that makes http://endless.horse less endless.",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["*://endless.horse/*"],
      "js": ["vendor.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "version": "1.0.0",
  "permissions": [
      "http://*/*",
      "tabs"
  ],
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}